<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Quiz Leaderboard</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
    <div class="container">
        <h1>Quiz Leaderboard</h1>
        <p class="subtitle">Top scores from all players</p>

        <div class="leaderboard-list">
            <% if (scores.length === 0) { %>
                <p>No quiz scores yet. Be the first to play!</p>
            <% } else { %>
                <table class="scores-table">
                    <thead>
                        <tr>
                            <th>Rank</th>
                            <th>Player</th>
                            <th>Score</th>
                            <th>Questions</th>
                            <th>Percentage</th>
                            <th>Category</th>
                            <th>Difficulty</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% scores.forEach(entry => { %>
                            <tr class="<%= entry.rank <= 3 ? 'top-' + entry.rank : '' %>">
                                <td><%= entry.rank %></td>
                                <td><%= entry.email %></td>
                                <td><%= entry.score %></td>
                                <td><%= entry.totalQuestions %></td>
                                <td><%= entry.percentage %>%</td>
                                <td><%= entry.category %></td>
                                <td><%= entry.difficulty %></td>
                            </tr>
                        <% }); %>
                    </tbody>
                </table>
            <% } %>
        </div>

        <div class="actions">
            <a href="/quiz" class="btn">Take a Quiz</a>
            <a href="/dashboard" class="btn">Back to Dashboard</a>
        </div>
    </div>
</body>
</html>
